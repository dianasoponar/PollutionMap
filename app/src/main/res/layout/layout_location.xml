<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/area"
                android:text="Location here"
                android:textSize="16sp"
                android:typeface="sans"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:textColor="#000000"
                android:gravity="left"/>

            <ImageView
                android:id="@+id/imageAlertAdapter"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/ic_alert_icon_red"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8sp"
                android:layout_marginTop="3sp"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Pollution Index: "
                android:textSize="14sp"
                android:textColor="#000000"
                android:typeface="sans"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pollutionLevel"
                android:textSize="14sp"
                android:text="245.98"
                android:typeface="sans"
                android:paddingStart="8dp"
                android:textColor="#000000"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/healthRecommendations"
            android:textColor="#fa000000"
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:typeface="sans"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="12:53 today"
            android:id="@+id/timestamp"
            android:textSize="10sp"
            android:paddingRight="10dp"
            android:typeface="sans"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>