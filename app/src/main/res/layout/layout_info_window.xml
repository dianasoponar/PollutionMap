<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_map_info">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/indexInfoWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GOOD"
            android:gravity="right"/>

        <TextView
            android:id="@+id/pollutionLevelInfoWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="402"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/areaInfoWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1976d2"
        android:textSize="12sp"
        android:text="Teatrul National Lucian Blaga"
        android:singleLine="false"
        app:layout_constraintTop_toBottomOf="@+id/recommendationsInfoWindow"/>

    <TextView
        android:id="@+id/recommendationsInfoWindow"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="#c2185b"
        android:textSize="12sp"
        android:text="JUST BREATH"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/indexInfoWindow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6sp"
        android:gravity="end"
        android:text="12:53 today"
        android:id="@+id/timestampInfoWindow"
        android:textColor="#1976d2"
        android:textSize="10sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areaInfoWindow"/>
</LinearLayout>

