<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_map_info">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:src="@drawable/ic_marker_star_icon_yellow"/>
        <TextView
            android:id="@+id/indexInfoWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <TextView
                android:id="@+id/areaInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#1976d2"
                android:text="Strada Almasului"
                android:singleLine="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recommendationsInfoWindow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="12:53 today"
                android:id="@+id/timestampInfoWindow"
                android:textColor="#1976d2"
                android:textSize="10sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/areaInfoWindow"/>
    </LinearLayout>

</LinearLayout>

