<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/rounded_corners_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:src="@drawable/ic_star_icon"/>
        <TextView
            android:id="@+id/indexInfoWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="2.8"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="140sp"
        android:orientation="vertical">

        <TextView
                android:id="@+id/areaInfoWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8sp"
                android:textColor="#000000"
                android:text="Strada Almasului"
                android:singleLine="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="10sp"
                app:layout_constraintTop_toBottomOf="@+id/recommendationsInfoWindow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="12:53 today"
                android:id="@+id/timestampInfoWindow"
                android:textColor="#000000"
                android:textSize="10sp"
                android:typeface="sans"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="5sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/areaInfoWindow"/>
    </LinearLayout>

</LinearLayout>

